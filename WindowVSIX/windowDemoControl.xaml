<UserControl x:Class="WindowVSIX.windowDemoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <Grid>
        <DockPanel LastChildFill="True" Background="Thistle">
            <DockPanel DockPanel.Dock="Top">
                <TextBlock Margin="3" >windowDemo</TextBlock>
                <Button Content="Refrash" Click="button1_Click" 
                        Height="20"  x:Name="button1" Margin="3"/>
            </DockPanel>
            <RichTextBox Name="tbMain" Margin="3" ></RichTextBox>
        </DockPanel>
    </Grid>
</UserControl>
